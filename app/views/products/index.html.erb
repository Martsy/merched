<h1>"All Products"</h1>

<table>
  <tr>
    <th></th>
    <th>Product</th>
    <th>Price</th>
    <th>Stock</th>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td><%= link_to image_tag("products/#{product.image_url}"), product_path(product) %></td>
      <td>
        <span class="product_title">
          <%= link_to product.title, product_path(product) %>
        </span>
        <%= product.description %>
      </td>
      <td><%= print_price(product.price) %></td>
      <td><%= print_stock(product.stock) %></td>
      <td><%= link_to "Add to Cart", new_order_item_path(product_id: product.id) %></td>
    </tr>
  <% end %>

</table>

<p><%= link_to "Create a New Product", new_product_path, :id => "new_product" %></p>
